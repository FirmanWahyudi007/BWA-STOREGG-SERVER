<% include ../../partials/header.ejs %> <% include ../../partials/navbar.ejs %> <% include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Bank</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Ubah Bank "<%= bank.name %>"  </h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/bank/edit/<%= bank._id  %>?_method=PUT" method="POST" autocomplete="off">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Nama Pemilik</label>
                  <input type="text" class="form-control" value="<%= bank.name  %>" id="name" name="name" placeholder="Masukkan nama pemilik" />
                </div>
                <div class="form-group">
                  <label for="nameBank">Nama Bank</label>
                  <input type="text" class="form-control" value="<%= bank.nameBank  %>" id="nameBank" name="nameBank" placeholder="Masukkan nama Bank" />
                </div>
                <div class="form-group">
                  <label for="noRekening">No Rekening</label>
                  <input type="number" class="form-control" value="<%= bank.noRekening  %>" id="noRekening" name="noRekening" placeholder="Masukkan no rekening Bank" />
                </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<% include ../../partials/footer.ejs %> <% include ../../partials/js.ejs %>
